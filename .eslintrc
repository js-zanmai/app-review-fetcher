{
  "rules": {
    "indent": [2, 2],
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "no-console": 0,
    "no-multi-spaces": 2,
    "block-scoped-var": 2,
    "no-unused-vars": 1,
    "no-use-before-define": 2, 
    "block-spacing": 2,
    "comma-spacing": 2,
    "camelcase": 2,
    "brace-style": 2,
    "array-bracket-spacing": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-whitespace-before-property": 2,
    "spaced-comment": 2,
    "space-before-blocks": 2
  },
  "env": {
    "node": true
  },
  "globals": {
    "Promise": true
  },
  "extends": "eslint:recommended"
}